<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.patinho.logoali">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash screen -->
        <activity
            android:name="com.example.testandologoali.GPlusActivity"
            android:screenOrientation="portrait" />

        <activity android:name="com.example.testandologoali.SplashDevMedia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.testandologoali.MainActivity"
            android:label="@string/search_activity_label" />

        <activity
            android:name="com.example.testandologoali.LoginActivity"
            android:label="Login" />

        <activity android:name="com.example.testandologoali.CadastroActivity" />
        <activity android:name="com.example.testandologoali.ActivityDetalhe" />
        <activity android:name="com.example.testandologoali.ActivityEstabelecimentos" />
        <activity android:name="com.example.testandologoali.ActivityEditEstab" />
        <activity android:name="com.example.testandologoali.ActivityCreateEstab" />
        <activity android:name="com.example.testandologoali.QRReader" />
        <activity android:name="com.example.testandologoali.QRWriter" />

        <activity android:name="com.example.testandologoali.ToDoActivity" />
    </application>

</manifest>